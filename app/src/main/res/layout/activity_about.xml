<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".about">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="#000"
        android:text="BHARATI" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/t1"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="ONE NATION ONE SCRIPT" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_below="@+id/t2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bharati is a common script for India. The Roman Script is used as a common script for many European languages ( English, French, German, etc ), which facilitates communication across nation that speak and write those languages. Likewise a common script for those the entire country can bring down many communication barriers in India. " />

    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/t3"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Useful Links - " />

    <TextView
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_above="@id/t6"
        android:textColor="#000"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="Developed By: Ashish Kumar" />
    <TextView
        android:id="@+id/t6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="7sp"
        android:textColor="#000"
        android:layout_above="@+id/menu"
        android:gravity="center"
        android:text="Contact: ak29ash7@gmail.com" />

    <TextView
        android:id="@+id/t7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/t4"
        android:layout_marginTop="15dp"
        android:textColorLink="#ff0000"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/site1" />
    <TextView
        android:id="@+id/t8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/t7"
        android:layout_marginTop="10dp"
        android:textColorLink="#ff0000"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/site2" />
    <TextView
        android:id="@+id/t9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/t8"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColorLink="#ff0000"
        android:textStyle="bold"
        android:text="@string/site3" />


    <Button
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="20sp"
        android:elevation="6dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>